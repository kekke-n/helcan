<h1>People</h1>

<div id="people">
  <table class="table">
    <thead>
    <tr>
      <th scope="col"><%= t 'id' %></th>
      <th scope="col"><%= t 'name' %></th>
      <th scope="col"><%= t 'age' %></th>
      <th scope="col"><%= t 'height' %></th>
      <th scope="col"><%= t 'weight' %></th>
      <th scope="col"><%= t 'body_fat' %></th>
      <th scope="col"><%= t 'bmi' %></th>
      <th scope="col"><%= t 'fat_level' %></th>
      <th scope="col"><%= t 'action' %></th>
    </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <th scope="row"><%= person.id %></th>
        <td><%= person.name %></td>
        <td><%= person.age %>æ­³</td>
        <td><%= person.height %>cm</td>
        <td><%= person.weight %>kg</td>
        <td><%= number_to_percentage person.body_fat, precision: 2 %></td>
        <td><%= format("%.2f", person.bmi) %></td>
        <td><%= fat_level(person) %></td>
        <td>
          <%= link_to "Show", person %> |
          <%= link_to "Edit", edit_person_path(person) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

