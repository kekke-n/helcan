<p style="color: green"><%= notice %></p>

<h1>People</h1>

<div id="people">
  <table class="table">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">名前</th>
      <th scope="col">年齢</th>
      <th scope="col">身長</th>
      <th scope="col">体重</th>
      <th scope="col">体脂肪率</th>
      <th scope="col">BMI</th>
      <th scope="col">肥満度</th>
      <th scope="col">アクション</th>
    </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <th scope="row"><%= person.id %></th>
        <td><%= person.name %></td>
        <td><%= person.age %>歳</td>
        <td><%= person.height %>cm</td>
        <td><%= person.weight %>kg</td>
        <td><%= number_to_percentage person.body_fat, precision: 2 %></td>
        <td><%= format("%.2f", person.bmi) %></td>
        <td><%= fat_level(person) %></td>
        <td>
          <%= link_to "Show", person %> |
          <%= link_to "Edit", edit_person_path(person) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New person", new_person_path %>

